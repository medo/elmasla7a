%h1
  = "Login"
%hr
-if($message)
  %h4.text-center
    Wrong credentials.
%form{"method"=>"POST", "action" => "#{$controller->getPath("Site","postLogin",false)}"}
  .row
    %label.control-label.col-md-1 Email
    %input{"required" =>"true", "type" => "textbox", "placeholder" => "john@doe.com", "name" => "email"}
  .row
    %label.control-label.col-md-1 Password
    %input{"required" =>"true", "type" => "password", "name" => "password"}
  .row
    %input.btn.btn-success.col-md-offset-2{"type" => "submit", "value" => "login"}